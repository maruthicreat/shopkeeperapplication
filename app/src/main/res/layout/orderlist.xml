<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cartimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/cartitemname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cartimage"
            android:layout_toRightOf="@+id/cartimage"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/cartremovebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/red"
            android:padding="5dp"
            android:text="CANCEL ORDER"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cartprice"
            android:layout_alignBottom="@+id/cartprice"
            android:layout_toEndOf="@+id/cartimage"
            android:layout_toRightOf="@+id/cartimage"
            android:paddingLeft="10dp"
            android:text="â‚¹"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/cartprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cartremovebtn"
            android:layout_toEndOf="@+id/textView12"
            android:layout_toRightOf="@+id/textView12"
            android:text="0000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/ordpaymenttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView12"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView12"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:singleLine="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/orddatetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cartremovebtn"
            android:layout_alignStart="@+id/cartremovebtn"
            android:layout_alignTop="@+id/cartitemname"
            android:singleLine="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/ordadderestxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ordpaymenttxt"
            android:layout_alignBottom="@+id/ordpaymenttxt"
            android:layout_alignLeft="@+id/cartprice"
            android:layout_alignStart="@+id/cartprice"
            android:singleLine="true"
            android:text="TextView" />
    </RelativeLayout>
</android.support.v7.widget.CardView>